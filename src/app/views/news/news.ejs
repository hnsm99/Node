<!DOCTYPE html>
<html lang="es" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Usuarios</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <a href="#" class="navbar-brand mx-auto">Usuarios</a>
    </nav>
    <div class="container">
    <div class="row">
      <div class="col-md-6 mt-4 text-center">
<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>#</th>
      <th>nombre</th>
      <th>apellido</th>
      <th>Correo</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Fecha Registro</th>
    </tr>
  </thead>
<tbody>
  <% for(i=0; i< news.length;i++){ %>
    <tr>
      <td><%= news[i].id_usuario %></td>
      <td><%= news[i].nombre %></td>
      <td><%= news[i].apellido %></td>
      <td><%= news[i].correo %></td>
      <td><%= news[i].telefono %></td>
      <td><%= news[i].direccion %></td>
      <td><%= news[i].fecha_registro %></td>
    </tr>
    <% } %>
</tbody>
</table>
</div>

<div class="col-md-6 mt-4">
  <form action="/news" method="post" class="card-body">
<h3 class="card-title">Agrega un usuario</h3>
  <div class="form-group">
  <label class="control-label">Nombre</label>
  <input class="form-control" type="text" placeholder="Nombre" name="nombre" required>
  </div>

  <div class="form-group">
  <label class="control-label">Apellido</label>
  <input class="form-control" type="text" placeholder="Apellido" name="apellido" required>
  </div>

  <div class="form-group">
  <label class="control-label">Correo</label>
  <input class="form-control" type="text" placeholder="Correo Electronico" name="correo" required>
  </div>

  <div class="form-group">
  <label class="control-label">Dirección</label>
  <input class="form-control" type="text" placeholder="Dirección de residencia" name="direccion" required>
  </div>

  <div class="form-group">
  <label class="control-label">Telefono</label>
  <input class="form-control" type="number" placeholder="3115488745" name="telefono" required>
  </div>
  <div class="form-group">
  <label class="control-label">Contraseña</label>
  <input class="form-control" type="password" placeholder="********" name="pass" required>
  </div>
  <input type="submit" value="Registrar" class="btn btn-primary">
  </form>
</div>
</div>
</div>
  </body>
</html>
